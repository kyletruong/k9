{
  "name": "sandbox",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "lint": "oxlint --type-aware",
    "lint:watch": "watchexec -e js,jsx,ts,tsx -r --debounce 200ms -- oxlint --type-aware",
    "types": "tsgo --noEmit",
    "types:gen": "wrangler types",
    "types:watch": "tsgo --noEmit --watch --preserveWatchOutput",
    "format": "oxfmt --check",
    "format:watch": "watchexec -r --debounce 200ms -- oxfmt --check"
  },
  "dependencies": {
    "@cloudflare/sandbox": "0.6.9",
    "@opencode-ai/sdk": "1.1.3"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20260106.1",
    "wrangler": "4.56.0"
  }
}
