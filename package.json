{
  "name": "k9",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check:all": "turbo run //#lint types:check //#format:check",
    "dev:sandbox": "turbo run dev:wrangler lint:watch types:watch --filter=sandbox",
    "dev:dotdev": "turbo run dev:vite lint:watch types:watch --filter=dotdev",
    "dev:dotrun": "turbo run dev:vite dev:convex lint:watch types:watch --filter=dotrun",
    "deploy:dotdev": "pnpm --filter dotdev run build && pnpm --filter dotdev run deploy",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "lint:fix-suggestions": "oxlint --type-aware --fix-suggestions",
    "lint:fix-unsafe": "oxlint --type-aware --fix-dangerously",
    "types:check": "turbo run types:check",
    "types:gen": "turbo run types:gen"
  },
  "devDependencies": {
    "oxfmt": "0.21.0",
    "oxlint": "1.36.0",
    "oxlint-tsgolint": "0.10.1",
    "turbo": "2.7.2"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.27.0"
}
