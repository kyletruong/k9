{
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "turbo": "2.7.2"
  },
  "engines": {
    "node": ">=24"
  },
  "name": "k9",
  "packageManager": "pnpm@10.25.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev:sandbox": "turbo run dev:wrangler lint:watch check-types:watch --filter=sandbox",
    "dev:www": "turbo run dev:vite dev:convex lint:watch check-types:watch --filter=www",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:fix-unsafe": "biome check --write --unsafe",
    "lint:staged": "biome check staged",
    "types": "turbo run types"
  }
}
