{
  "name": "k9",
  "private": true,
  "scripts": {
    "check": "turbo run //#lint:repo types //#format:repo --continue --log-order=grouped --output-logs=errors-only",
    "deploy:dotdev": "pnpm --filter=dotdev run deploy",
    "dev:dotdev": "turbo run dev --filter=dotdev",
    "dev:dotrun": "turbo run dev --filter=dotrun",
    "dev:sandbox": "turbo run dev --filter=sandbox",
    "format:fix:repo": "oxfmt",
    "format:repo": "oxfmt --check",
    "format:watch:repo": "watchexec -r --debounce 200ms -- oxfmt --check",
    "lint:fix:repo": "oxlint --type-aware --fix --fix-suggestions --fix-dangerously",
    "lint:repo": "oxlint --type-aware",
    "types:gen:repo": "turbo run types:gen",
    "types:repo": "turbo run types"
  },
  "devDependencies": {
    "oxfmt": "0.28.0",
    "oxlint": "1.43.0",
    "oxlint-tsgolint": "0.11.4",
    "turbo": "2.8.3"
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.29.1"
}
