{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "//#format": {},
    "//#lint": {},
    "build": {
      "dependsOn": ["^build"],
      "env": ["VITE_*"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["types:watch", "lint:watch", "format:watch"]
    },
    "format": {},
    "format:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["types:gen", "transit"]
    },
    "lint:watch": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["types:gen", "transit"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "types": {
      "dependsOn": ["types:gen", "transit"]
    },
    "types:gen": {
      "dependsOn": ["^types:gen"],
      "outputs": [".content-collections/**", "worker-configuration.d.ts"]
    },
    "types:watch": {
      "cache": false,
      "persistent": true
    }
  },
  "ui": "tui"
}
