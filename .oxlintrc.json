{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "typescript", "import", "unicorn", "jsx-a11y", "vitest"],
  "categories": {
    "perf": "error",
    "suspicious": "warn"
  },
  "rules": {
    "eslint/sort-imports": [
      "warn",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    "eslint/sort-keys": "warn",
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": [
    "**/dist",
    "**/node_modules",
    "**/routeTree.gen.ts",
    "**/convex/_generated",
    "**/*.d.ts"
  ]
}
